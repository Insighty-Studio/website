.heading
  font-family "Roboto Mono", sans-serif
  margin-bottom 30px

  .sub-title
    display flex
    align-items center
    margin-bottom 16px
    opacity 0.4
    font-size 12px
    font-weight 500
    line-height 12px
    letter-spacing 4px
    text-transform uppercase

    +iphone5()
      font-size 10px

    +iphone()
      font-size 12px

    &:before
      content ''
      display block
      height 1px
      width 40px
      margin-right 12px
      background #BFBFBF

      +iphone5()
        width 20px

      +iphone()
        width 40px

  .title
    font-size 32px
    line-height 42px

    +iphone5()
      font-size 20px
      line-height 28px

    +iphone()
      font-size 32px
      line-height 42px