@import "~styles/config.styl"

.heading
  font-family "Roboto Mono", sans-serif
  margin-bottom 30px

  .sub-title
    display flex
    align-items center
    margin-bottom: 12px
    opacity 0.4
    font-size 12px
    line-height 12px
    letter-spacing 4px
    text-transform uppercase

    &:before
      content: ''
      display block
      height: 1px
      width: 40px
      background #BFBFBF
      margin-right: 12px

  .title
    font-size 32px
    line-height 42px
