.heading
  font-family "Roboto Mono", sans-serif
  margin-bottom 30px

  .sub-title
    display flex
    align-items center
    margin-bottom 12px
    opacity 0.4
    font-size 12px
    line-height 12px
    letter-spacing 4px
    text-transform uppercase

    &:before
      content: ''
      display block
      height: 1px
      width: 40px
      margin-right 12px
      background #BFBFBF

    &.betteryet
      color $betteryetYellow
      opacity 1

      &:before
        background $betteryetYellow

  .title
    font-size 32px
    line-height 42px