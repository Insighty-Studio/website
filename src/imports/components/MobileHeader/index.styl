.mobile-header
  height 80px
  width 100%
  margin 0
  padding 0
  position fixed
  z-index 1
  background-color white

  .mobile-closed-menu
    height 100%
    width 100%
    margin 0
    padding 0 8% 0 10%
    display flex
    flex-direction row
    align-items center
    justify-content space-between

    .menu-icon-button
      background none
      border none
      padding 0
      cursor pointer

    .consult-button
      color white
      font-size 13px
      text-transform uppercase
      text-decoration none
      font-weight bold
      background-color #5C64AA
      padding 12px 16px
      border-radius 32px

  .mobile-header-nav
    height 100%
    width 100%
    margin 0
    padding 0
    display flex
    flex-direction row
    align-items center
