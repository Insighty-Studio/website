.button
  cursor pointer
  background-color #FF5551
  border-width 0
  border-radius 47.5px
  padding 2vw 5vw
  color white
  outline none
  font-weight bold
  font-size 1.41vw
  font-family "PT Sans", sans-serif
  transition all .3s ease-out

  &:hover
    transform translateY(-3px)
    box-shadow 0 15px 20px rgb(255, 216, 215)
