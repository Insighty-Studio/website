.button
  cursor pointer
  background-color #FF5551
  border none
  border-radius 45px
  padding 2vw 5vw
  color white
  outline none
  font-weight 500
  font-size 11px
  font-family "PT Sans", sans-serif
  transition all 0.3s ease 0s
  text-transform uppercase
  letter-spacing 2.5px

  &:hover
    transform translateY(-3px)
    box-shadow 0 15px 20px rgb(255, 216, 215)
