.colors-section
  display flex
  align-items center
  position relative
  height 495px
  padding 0 32px
  overflow hidden

  +iphone()
    padding 0

  .section-name
    color $white

  .colors
    display flex
    max-width 1320px
    margin 0 auto
    flex-grow 1
    justify-content space-between
    z-index 1
    font-family Quicksand
    font-style Italic
    font-weight 700
    margin-top 95px

    +iphone()
      flex-wrap wrap

    .color
      width 25%

      +iphone()
        width 100% !important

      &:first-child
        border-radius: 8px 0 0 8px;

        +iphone()
          border-radius: 0

      &:last-child
        border-radius: 0 8px 8px 0;

        +iphone()
          border-radius: 0

      .color-info
        padding 30px
        color $white
        font-weight 500
        font-style: normal
        font-family "Roboto Mono", sans-serif

        .hash
          font-weight normal
