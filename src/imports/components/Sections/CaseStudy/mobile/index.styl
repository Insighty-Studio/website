+iphone()
  .case-studies-page
    width 100%
    scroll-snap-align start none
    margin 0
    flex-shrink 0
    height 100vh
    padding 16vh 10% 0 10%

    .screens-container-mobile
      display block
      width 100vw
      overflow-x visible
      height 75%
      position relative

      .screens
        img
          max-width 100%

      .screens-scroll
        position absolute
        top 0
        display flex
        flex-direction row
        align-items center
        overflow-x scroll
        height 100%
        width 100%
        z-index 1
        -webkit-overflow-scrolling touch
        -webkit-scroll-snap-type mandatory
        scroll-snap-type x mandatory
        -webkit-scroll-snap-destination 50% 50%
        scroll-snap-destination 50% 50%

        .img-wrapper
          position relative
          width 100vw
          top -1.53vh
          height 100%
          display flex
          align-items center
          justify-content center
          flex-shrink 0

          img
            height 61.8%
            width auto
            -webkit-scroll-snap-coordinate 50% 50%
            scroll-snap-coordinate 50% 50%
            scroll-snap-align center

        .second
          left -50vw
        .third
          left -100vw

      svg
        position sticky
        top 0

    .case-studies-heading
      width 100%
      font-size 6.93vw
      margin 0

    .case-study-bg
      margin-top 0
      padding 0
      background-color #ffffff

      .screens-container
        display none

      .case-study-description
        margin-top 0
        .case-study-title
          font-size 5.33vw
          margin 0
        .case-study-subtitle
          font-size 3.73vw
        .case-study-text, .case-study-separator
          display none

      .animated-button-container
        margin-top 2vh
