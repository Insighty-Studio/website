  padding 80px 0
  display flex
  align-items center
  justify-content center

  .description
    display flex
    flex-direction column
    margin-left 80px
    font-family Roboto Mono, sans-serif

    .title
      margin-bottom 14px
      font-weight $medium-weight
      text-transform uppercase
      letter-spacing 1.75px

    .desc
      font-family Roboto, sans-serif
      font-size $small
      width 306px
      line-height 28px
      margin-bottom 20px
      color rgba(0, 0, 0, .6)

    .full-review-btn
      .button
        float left

