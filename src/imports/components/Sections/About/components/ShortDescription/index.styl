.short-description
  font-family "Roboto Mono", sans-serif

  .title
    display flex
    align-items center
    margin-bottom 16px
    font-size 12px
    line-height 12px
    font-weight 500
    letter-spacing 4px
    text-transform uppercase

    &:before
      content ''
      display block
      height 1px
      width 40px
      margin-right 12px

  .description
    color white
    font-size 24px
    line-height 32px
    font-weight normal
