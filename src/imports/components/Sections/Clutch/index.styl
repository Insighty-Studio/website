.clutch-section
  padding 80px 0
  display flex
  align-items center
  justify-content center
  font-size 16px
  color white
  text-transform uppercase
  font-family Roboto Mono
  font-weight 500

  a.clutch-link
    display flex
    align-items center
    color white
    text-decoration none

  svg
    margin-left 20px
    border-radius 50%
    box-shadow 0 2px 4px 0 rgba(255, 255, 255, .3)
