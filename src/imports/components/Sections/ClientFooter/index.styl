.client-footer
  display flex
  width 780px
  padding-bottom 16px

  +iphone()
    width 100%
    flex-direction column
    align-items center

  .client-photo
    img
      vertical-align middle
      width 160px
      height 160px
      border-radius 50%

  .client-overview
    margin-left 40px
    font-family "Roboto Mono", sans-serif

    +iphone()
      width 294px
      margin 24px 0 0

    .name, .position
      font-size $small
      text-transform uppercase

      +iphone()
        text-align center

    .name
      font-weight $medium-weight
      letter-spacing 2px

    .position
      margin-top 8px
      opacity 0.6
      letter-spacing 1px

    .comment
      margin 32px 0
      font-size 32px
      line-height 42px

      +iphone()
        margin 24px 0
        text-align center
        font-size 24px
        line-height 32px

  .buttons
    display flex

    +iphone()
      justify-content center

    .full-review-btn, .project-details-btn
      height 32px
      color $black
      font-size $small

      .button-hover-text
        width 48px
        height 48px
        box-shadow none
        background $black

        +iphone()
          width 32px
          height 32px

      .button-icon
        border-radius 50%
        background-color $black

        +iphone()
          width 32px
          height 32px

    .full-review-btn
      +iphone()
        display none

    .project-details-btn
      margin-left 40px

      +iphone()
        margin 0

      .button-title
        +iphone()
          color $blue

      .button-icon
        +iphone()
          background-color $blue

.client-enter
  opacity 0.01

.client-enter.client-enter-active
  opacity 1
  transition opacity 500ms ease-outi

.client-leave
  opacity 1

.client-leave.client-leave-active
  opacity 0.01
  transition opacity 300ms ease-in
