.contact-us-form
  +alliphones()
    display block
    width 100%
    max-width 100%
    margin 0
    padding 0 40px

  .section-heading
    +alliphones()
      margin 0
      padding-top 64px

    div:last-child
      +alliphones()
        letter-spacing 6px

  form
    +alliphones()
      margin-top 40px

    .form-raw
      +alliphones()
        margin-bottom 0

      .input
        +alliphones()
          width 100%
          margin-bottom 12px
          background-color white

      .input:last-child
        +alliphones()
          margin 0 0 12px

    .text-area
      +alliphones()
        width 100%
        margin-bottom 32px

    .input, .text-area
      +alliphones()
        box-shadow inset 0 1px 0 0 rgba(0,0,0,0.07), 0 4px 8px 0 rgba(0,0,0,0.03)
        background-color white

  .form-message
    +alliphones()
      margin 22px 0 10px

  .footer
    +alliphones()
      display block
      text-align center
      margin-bottom 0

    .footer-details
      +alliphones()
        text-align center
        margin-bottom 32px
