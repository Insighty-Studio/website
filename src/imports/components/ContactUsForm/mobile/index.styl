+iphone()
  .contact-us-form
    display block
    width 100%
    max-width 100%
    margin 0
    padding 0 40px

    .section-heading
      margin 0
      padding-top 64px

      div:last-child
        letter-spacing 6px

    form
      margin-top 40px

      .form-raw
        margin-bottom 0

        .input
          width 100%
          margin-bottom 12px

          &:last-child
            margin 0 0 12px

      .text-area
        width 100%
        margin-bottom 32px

      .input, .text-area
        box-shadow inset 0 1px 0 0 rgba(0,0,0,0.07), 0 4px 8px 0 rgba(0,0,0,0.03)

    .form-message
      margin 22px 0 10px

    .footer
      display block
      text-align center
      margin-bottom 0

      .footer-details
        text-align center
        margin-bottom 32px


+iphone5()
  .contact-us-form
    padding 0 30px

    .section-heading
      padding-top 60px

    form .form-raw .input
      margin-bottom 10px

      &:last-child
        margin 0 0 10px

    .footer .footer-details
      margin-bottom 30px
