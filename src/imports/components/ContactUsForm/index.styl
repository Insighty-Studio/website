.contact-us-form
  display flex
  flex-direction column

  +iphone()
    display block
    width 100%
    max-width 100%
    margin 0
    padding 0 40px

  .section-heading
    margin-top 120px

    +iphone()
      margin 0
      padding-top 64px

    div:last-child
      +iphone()
        letter-spacing 6px

  form
    display flex
    flex-direction column
    align-self center
    align-items center
    margin-top 64px

    +iphone()
      margin-top 40px

    .form-raw
      margin-bottom 32px

      +iphone()
        margin-bottom 0

      .input
        +iphone()
          width 100%
          margin-bottom 12px
          background-color $white

      .input:last-child
        margin-left 32px

        +iphone()
          margin 0 0 12px

    .text-area
      width 676px
      margin-bottom 64px

      +iphone()
        width 100%
        margin-bottom 32px

    .input, .text-area
      +iphone()
        box-shadow inset 0 1px 0 0 rgba(0,0,0,0.07), 0 4px 8px 0 rgba(0,0,0,0.03)
        background-color $white

    .form-btn
      font-family 'Roboto Mono'
      line-height 21px
      font-weight $medium-weight

  .form-message
    display flex
    justify-content center
    height 20px
    margin 22px 0 54px
    color $grayish-blue
    font-size $small
    line-height 20px
    letter-spacing 0.1px
    transition 1s
    opacity 0

    +iphone()
      margin 22px 0 10px


  .appearance
    opacity 1

  .footer
    +iphone()
      display block
      text-align center
      margin-bottom 0

    .footer-details
      +iphone()
        text-align center
        margin-bottom 32px
