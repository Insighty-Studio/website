@import "~styles/config.styl"

.button
  outline none
  cursor pointer
  color $white
  text-transform uppercase
  font-weight $medium-weight
  padding 16px 20px
  font-size 16px
  border-radius 32px
  border 1px solid $blue
  background-color $blue

  &:disabled
    opacity 0.9

  .button-title
    padding-right 24px
