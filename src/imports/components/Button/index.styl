.btn
  cursor pointer
  background-color #FF5551
  border-width 0
  border-radius 47.5px
  padding 0 32px
  color white
  outline none
  font-weight bold
  font-size 14px
  text-transform: uppercase
  text-decoration: none
  letter-spacing 2px
  transition all .3s ease-out
  display inline-block
  height: 64px
  line-height: @height
  position: relative
  overflow hidden
  text-align: center
  white-space nowrap

  &:before
    content ''
    position: absolute
    top: 0
    left: 0
    bottom: 0
    width: 0
    background: darken($red, 10%)
    transition width .3s ease-out
    z-index: 1
    border-radius 0

  &:hover
    box-shadow 0 0 64px 0 rgba(255, 85, 81, 0.5)

    &:before
      width: 100%

  span
    position: relative
    z-index: 2

.btn-link
  background: none
  border: none
  padding: 0
  margin: 0
  display inline
  color: $purple
  text-decoration: underline
  outline: none
  cursor: pointer

