.header
  background-color white
  display flex
  align-items center
  position sticky
  top 0
  margin-top 6vh
  width 100vw
  padding 4vh 0 4vh 0
  z-index 3

  .header-logo
    margin-left 9.85vw

  .header-nav
    list-style-type none
    display flex
    flex-direction row
    margin-left 18.5vw

    .header-nav-item
      text-decoration none
      color black
      margin 0 1.9vw
      font-size 1.13vw
      letter-spacing 0.88pt

  .header-link
    margin-left 4%
    color white
    text-decoration none

    .header-button
      padding 3vh 2.4vw
      font-size 1.4vw
      letter-spacing 1.8pt
      line-height 23pt

