.header
  background-color white
  position sticky
  top 0
  padding 20px 0
  z-index 3
  width: 100vw

  .aligner
    display flex
    align-items center

  .header-nav
    list-style-type none
    display flex
    flex-direction row
    justify-content space-between
    margin-left auto

    .header-nav-item
      text-decoration none
      color rgba(0, 0, 0, 0.6)
      font-size 16px
      font-weight: 600
      margin 0 16px
      letter-spacing 0.88pt
      cursor pointer
      text-transform uppercase
      position relative
      transition color .4s

      &.active-path, &:hover
        color black

        &:before
          width: 100%
          left 0

      &:before
        content ''
        display block
        height 2px
        background #FF5551
        width 0
        position absolute
        bottom -4px
        right 0
        transition width .4s

  .header-link
    margin-left 5vw
    color white
    text-decoration none

    .header-button
      padding 2vh 2.4vw
      font-size 1.13vw
      letter-spacing 1.8pt
      line-height 23pt

  .menu-icon, .close-menu-icon
    display none

