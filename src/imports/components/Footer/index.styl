.footer
  .footer-default
    display flex
    justify-content space-between
    padding 40px 120px
    line-height 19px
    background-color white

  .footer-landing
    background-color #121B2F

    .content
      display flex
      flex-direction column
      max-width 1160px
      margin 0 auto
      padding 84px 40px 40px
      color white
      font-size $small
      line-height 23px
      letter-spacing 1px

      .menu
        display flex
        align-items center

        .logo
          vertical-align middle
          margin-right 40px

        .links
          a
            text-transform uppercase
            cursor pointer
            margin-right 40px

            &:last-child
              margin-right 0

        .socials
          display flex
          align-items flex-end
          justify-content flex-end
          width 100%

          a
            margin-right 24px

            &:hover
              cursor pointer

            &:last-child
              margin-right 0

      .details
        display flex
        justify-content space-between
        align-items flex-end
        margin-top 70px

        .rights, .info
          letter-spacing 0
          opacity .4
          line-height 32px

        .info
          text-align right

          span:last-child
            display block
            padding-top 8px
