.footer
  background-color #464D89
  width 100vw
  display flex
  flex-direction column
  padding 60px 40px
  color white
  font-size $small
  line-height 23px
  letter-spacing 1.5px

  .menu
    display flex
    align-items center

    .logo
      margin-right 60px

    .links a
      cursor pointer
      text-transform uppercase
      margin-right 32px

      &:last-child
        margin-right 0

    .socials
      display flex
      align-items flex-end
      justify-content flex-end
      flex-grow 1

      a
        display flex
        margin-right 24px

        &:last-child
          margin-right 0

        svg
          fill white
          opacity .4
          transition opacity .3s

          &:hover
            opacity 1
            cursor pointer
            transition opacity .3s

  .details
    display flex
    justify-content space-between
    align-items flex-end
    margin-top 60px
    color rgba(255, 255, 255, .4)

    .info
      text-align right

      a
        color inherit
        text-decoration none

        &:hover
          text-decoration underline

      span:last-child
        display block
        padding-top 8px
