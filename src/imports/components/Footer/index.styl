.footer
  background-color #464D89
  width 100vw
  display flex
  flex-direction column
  align-items center
  padding 9vh 2vw 16vh 2vw
  color white
  font-size 1vw
  line-height 23px
  letter-spacing 1.5px

  .menu
    display flex
    align-items center
    width 80vw

    .header-button
      display none

    .logo
      margin-right 4.6vw

    .links a
      cursor pointer
      margin-right 3.7vw
      color #ffffff
      text-decoration none

      &.active-link
        font-weight bold

      &:first-child
        display none

      &:last-child
        margin-right 0

    .socials
      display flex
      align-items flex-end
      justify-content flex-end
      flex-grow 1

      a
        display flex
        margin-right 2vw

        &:last-child
          margin-right 0

        svg
          fill white
          opacity .4
          transition opacity .3s

          &:hover
            opacity 1
            cursor pointer
            transition opacity .3s

  .details
    display flex
    align-items flex-end
    justify-content space-between
    width 80vw
    margin-top 7.5vh
    color rgba(255, 255, 255, .4)
    line-height 32pt
    font-size 1.1vw

    .info
      text-align right

      a
        color inherit
        text-decoration none

        &:hover
          text-decoration underline

      span:last-child
        display block
        padding-top 8px
