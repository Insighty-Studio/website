@import "~styles/config.styl"

.section-heading
  display flex
  cursor default
  align-self center
  align-items center
  justify-content center
  width 200px
  height 92px
  overflow hidden
  transition width .1s ease-in

  &:hover
    width 160px

  .section-heading-title
    font-size: $section
    position absolute
    z-index 1

  .section-heading-bg
    display flex
    height 12px
    transform rotate(-20deg)
    background-color $snow
    width 240px
