.navigation-bar
  position absolute
  top 0
  left 0
  right 0
  z-index 9

  .bar-content
    padding 40px 32px 0
    width 100%
    max-width 1160px
    margin 0 auto
    display flex
    justify-content space-between
    align-items center

    .social-links
      display none

    .menu
      display none

    .links
      display flex
      margin-left: auto

      a
        font-size $normal
        line-height 20px
        text-decoration none
        margin-right 32px
        cursor pointer
        text-transform: uppercase
        letter-spacing 1px
        position relative
        color rgba(0, 0, 0, 0.6)
        transition color .4s

        &:before
          content ''
          display block
          height 2px
          background $blue
          width 0
          position absolute
          bottom -8px
          right 0
          transition width .4s

        &:hover
          color black

          &:before
            width 100%
            left 0

        &:last-child
          margin-right 0

        &.active
          color #000
          font-weight $medium-weight

      .white
        color white

        &:before
          background white

        &:hover
          color white

        &:last-child
          margin-right 0

        &.active
          color #000
          font-weight $medium-weight

    .consultation-link
      display block
      margin-left: 32px
      background: none
      border-radius 32px
      height: 40px
      line-height: 36px
      text-transform: uppercase
      text-decoration: none
      font-size: 14px
      font-weight: 600
      padding: 0 16px
      border: 2px solid white
      color: white
      transition background .2s

      &:hover
        background: white
