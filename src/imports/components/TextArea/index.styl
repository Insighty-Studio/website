.text-area
  width 100%
  height 144px
  resize none
  outline none
  padding 16px
  border none
  border-radius 8px
  background-color $marble
  -webkit-box-shadow inset 0 1px 0 0 rgba(0, 0, 0, 0.03)
  -moz-box-shadow inset 0 1px 0 0 rgba(0, 0, 0, 0.03)
  box-shadow inset 0 1px 0 0 rgba(0, 0, 0, 0.03)

.text-area-label
  color #5C64AA
  font-size 14px
  line-height 19px
  font-weight 600

  &::placeholder
    color #AAADB2

  &:focus-within
    border 2px solid #5C64AA
    background-color white

  &:focus::-webkit-input-placeholder
    color transparent
