@import "~styles/config.styl"

.process
  display flex
  flex-direction column
  width fit-content

  .process-circle
    width 10px
    height 10px
    margin 0 0 134px 36px
    border-radius 50%
    background $black

  .process-title
    display flex
    align-items baseline

    span:first-child
      display inline-block
      margin 0 16px 0 0
      font-size $step
      line-height $normal-height
      font-weight $light-weight
      opacity 0.2
    span
      display inline-block
      font-size $giant
      line-height $extra-large-height
      font-weight $medium-weight

  .process-description
    margin 10px 0 0 36px
    width 356px
