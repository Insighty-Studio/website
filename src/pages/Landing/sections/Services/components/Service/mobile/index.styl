+iphone()
  .service
    margin-bottom 62px
    display block
    width 100%
    padding 0 40px
    padding-bottom 210px
    position relative

    &:last-child
      margin-bottom 64px

    .service-icons
      grid-gap 40px
      position absolute
      bottom: 0
      left 0
      width 100%
      padding 0 40px

      .service-icon
        .icon-title
          font-size 12px

