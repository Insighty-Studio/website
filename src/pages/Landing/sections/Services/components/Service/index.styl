.service
  display flex
  margin-bottom 200px

  +iphone()
    margin-bottom 62px
    display block
    width 100%
    padding 0 40px
    padding-bottom 210px
    position relative

  +iphone5()
    margin-bottom 64px
    display block
    width 100%
    padding 0 40px
    padding-bottom 210px
    position relative

  &:last-child
    margin-bottom 160px

    +iphone()
      margin-bottom 64px

  .service-icons
    display grid
    grid-template-columns 1fr 1fr
    grid-gap 70px

    +iphone()
      grid-gap 40px
      position absolute
      bottom: 0
      left 0
      width 100%
      padding 0 40px

    +iphone5()
      grid-gap 24px
      position absolute
      bottom 0
      left 0
      width 100%
      padding 0 10px

    .service-icon
      align-items center
      display flex
      flex-direction column

      .icon-title
        margin-top 20px
        text-transform uppercase
        color $gray
        font-size $small
        font-family "Roboto Mono", sans-serif
        letter-spacing 2px
        white-space nowrap

        +iphone()
          font-size 12px

        +iphone5()
          font-size 12px
