@import "~styles/config.styl"

.services
  display flex
  flex-direction column
  justify-content space-between
  margin 60px 0
  height calc(100vh - 80px)

  .section-heading
    margin-top 20px

  .service-list
    display flex
    margin-top 60px
    height calc(100vh - 272px)
    transform rotate(-3deg)
    background-color $light-gray
    margin-left -5%
    width 110%

    .service-list-items
      flex 1
      display flex
      margin 0 124px
      align-items center
      transform rotate(3deg)
      flex-direction row
      justify-content space-around
