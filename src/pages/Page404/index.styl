.page-404
  font-family 'Roboto Mono'
  display flex
  height 100vh
  background linear-gradient(rgba(0, 84, 255, 0), rgba(0, 77, 255, 0.1))

  .mobile-bg
    display none

    +iphone()
      width 100%
      height 296px
      display block
      position absolute
      bottom 28px
      background url(/images/404/mobile-bg@2x.png)
      background-size @width @height

  .content
    display flex
    align-items center
    width 100%
    max-width 1024px
    margin 0 auto

    +iphone()
      padding 44px 40px 0
      align-items flex-start
      width 100%

    .content-info
      display flex
      flex-direction column
      width 452px

      +iphone()
        width 100%

      .heading
        +iphone()
          margin-bottom 20px

        .sub-title
          opacity 0.4

        .title
          +iphone()
            font-size 21px

      .paragraph
        opacity 0.8
        width 408px

        +iphone()
          width 100%
          font-size 15px
          line-height 28px
          opacity 0.6

      .lets-go-home-button
        margin-top 38px

        +iphone()
          margin-top 48px
