@import '~styles/config.styl'

.services
  display flex
  flex-direction column
  align-items center
  background-color $dark-blue

  .services-heading
    color $white
    font-size $section
    font-family "Roboto Mono", sans-serif
    font-weight $light-weight
    text-transform uppercase
    padding 120px 0

    +iphone()
      padding: 64px 0
      font-size: 28px
      font-weight: $regular-weight
      line-height: 1
      letter-spacing 6px
