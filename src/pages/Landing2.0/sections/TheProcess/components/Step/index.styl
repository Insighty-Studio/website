@import "~styles/config.styl"

.step
  display flex
  flex-direction column
  flex 1

  +iphone()
    margin-top 24px
    display block
    width 100%

  &:first-child
    +iphone()
      margin-top 40px


  .step-header
    display flex
    align-items center

    .number
      display flex
      align-items center

      .circle
        display flex
        justify-content center
        align-items center
        min-width 50px
        min-height 50px
        border 2px solid $light-green
        border-radius 50%
        color $light-green
        font-size $large
        font-weight $medium-weight
        line-height 21px

      .line
        width 126px

        +iphone()
          width 42px

    .line
      width 100%
      height 2px
      background-color $light-green

    .filler
      width 126px

      +iphone()
        width 42px

  .step-desc
    display flex
    flex-direction column
    margin 22px 0 0 126px
    width 410px

    +iphone()
      width: 100%
      margin 0px
      padding 24px 40px 0

    div:first-child
      margin-bottom 12px
      font-size 24px
      line-height 40px

    div:last-child
      opacity 0.6
      line-height 32px
