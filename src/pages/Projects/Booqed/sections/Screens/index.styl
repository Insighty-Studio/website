.booqed-page .screens-section
  padding 60px 0

  .screens-images
    display flex

    .left
      width 50%
      display flex
      flex-direction row
      align-items flex-start
      justify-content center

    img
      width 80%
      object-fit contain
      box-shadow 0 1px 20px 0 rgba(0,0,0,0.3)


    .right
      width 50%
      display flex
      flex-direction row
      flex-wrap wrap
      align-items flex-start
      justify-content center
