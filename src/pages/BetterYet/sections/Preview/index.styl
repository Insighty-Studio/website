@import "~styles/config.styl"

.by-preview
  display flex
  justify-content center
  align-items center
  height 100vh
  padding 0 124px
  background #FFDF4A
  position relative
  overflow hidden

  .hand-image
    position absolute
    bottom -900px
    animation jumpUp 2s infinite
    animation-duration 2.5s
    animation-delay 1s
    transition transform .3s ease-in

    &:hover
      animation none
      transform translateY(-750px)
      transition transform .3s ease-in-out

    img
      width 640px
      height 960px

@keyframes jumpUp
  0%, 10%, 20%, 100%
    bottom -900px

  3%, 13%
    bottom -850px
