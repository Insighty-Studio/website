+iphone()
  .team-page
    overflow-x hidden
    overflow-y scroll
    scroll-snap-type y mandatory
    display flex
    flex-direction column
    height 100%

    .team-bg
      flex 1 0 auto
      position relative
      top 80vh
      left 0
      display flex
      height 35vh
      margin-top -35vh
      width 100%
      z-index 0

      .team-chat
        margin 0
        flex 1 0 auto
        width 100vw
        height 30vh

    .team-content
      scroll-snap-align start none
      flex-shrink 0
      width 100%
      height 100vh
      margin-top 5.9%
      padding 16vh 10% 0 10%
      overflow hidden

      .team-heading
        width 100%
        font-size 6.93vw
        line-height 30pt

      .team-description-text
        width 100%
        font-size 4vw
        line-height 20pt

      .team-description-text.bold
        color #5C64AA
        margin-top 42vh
        font-size 5.33vw

    .team-members-cards
      scroll-snap-align start none
      margin 0
      flex-shrink 0
      height 100%
      padding 16vh 10% 0 10%
      width 100%

      .card-row, .card-row.last-row
        width 100%
        display flex
        flex-direction column
        margin 0

        .team-member
          width 100%
          height 75vh
          margin-bottom 15vh

        .member-photo
          width 46.67vw
          height 46.67vw

        .member-content
          height 60%

          .member-name
            font-size 5.6vw

          .member-position
            font-size 4.27vw

          .member-separator
            width 12vw
            margin-top 2vh

          .member-text
            display flex
            flex-direction column
            justify-content center
            height 100%
            font-size 3.47vw
            color #666666
            width 90%

