.home-page
  .home-content
    margin-top 9.8%
    width 100%
    padding 0 10% 34px 10%
    overflow hidden

    .home-bg
      width 100vw
      height 200vh
      position absolute
      overflow hidden
      top 0
      right 0
      z-index -1

      .vr-girl
        margin-left 62.34%
        margin-top 24%

    .home-heading-main
      margin 0
      width 55vw

    .home-description
      margin-top 3.5%
      width 54vw
      transition max-height 1s ease-in

      .description-more
        display inline-block
        color #5C64AA
        border-bottom 1px solid #5C64AA
        cursor pointer
        line-height 20px

        a
          text-decoration none
          color #5C64AA

      &.expanded
        .services-button
          margin-top 48px
          padding 2vh 2.4vw
          font-size 1.13vw
          letter-spacing 1.8pt
          line-height 23pt

        .home-description-text:first-child
          margin-top 0


  .home-help-section
    z-index 1
    margin-top 6.2%
    min-height 40vh
    display flex
    flex-direction column
    align-items center

    //  TODO this is duplicated
    .home-help-heading
      width 80vw
