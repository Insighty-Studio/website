+iphone()
  .home-page
    overflow-x hidden
    overflow-y scroll
    scroll-snap-type y mandatory
    display flex
    flex-direction column
    height 100%

    .home-content
      scroll-snap-align start none
      flex-shrink 0
      width 100%
      height 100vh
      margin-top 5.9%
      padding 16vh 5% 0 10%
      overflow hidden

      .home-bg
        flex 1 0 auto
        position relative
        top 80vh
        left 45vw
        display flex
        height 35vh
        margin-top -35vh
        width 100%
        z-index 0

        .parallax-inner
          transform none !important

          .vr-girl
            margin 0
            flex 1 0 auto
            width 90.13vw
            height 35vh

      .home-heading-main
        width 100%
        font-size 6.93vw
        line-height 30pt
        padding-right 10%

      .home-description
        width 100%
        max-height none
        padding-right 10%

        .description-more
          display none

        .home-description-text
          font-size 4vw
          line-height 20pt


          &:nth-child(2)
            padding-right 30%

          &:last-child
            display none

    .home-help-section
      scroll-snap-align start none
      margin 0
      flex-shrink 0
      height 100vh
      padding 16vh 10% 0 10%
      width 100%

      .home-help-heading
        margin 0
        font-size 6.93vw

      .fintech-logos-container
        width 100%
        margin 0
        display flex
        flex-direction row
        flex-wrap wrap

        .logo
          width 37.5vw
          height 37.5vw
          margin-top 4vw
          justify-content center

          &:nth-child(even)
            margin-left 2vw
          &:nth-child(odd)
            margin-right 2vw

          svg
            width 85%


    .home-case-studies
      width 100%
      scroll-snap-align start none
      margin 0
      flex-shrink 0
      height 100vh
      padding 16vh 10% 0 10%

      .screens-container-mobile
        display block

        width 100vw
        overflow-x visible
        height 68%
        position relative

        .screens-scroll
          position absolute
          top 0
          display flex
          flex-direction row
          align-items center
          overflow-x scroll
          height 100%
          width 100%
          z-index 1
          -webkit-overflow-scrolling touch
          -webkit-scroll-snap-type mandatory
          scroll-snap-type x mandatory
          -webkit-scroll-snap-destination 50% 50%
          scroll-snap-destination 50% 50%

          .img-wrapper
            position relative
            width 100vw
            top -1.3vh
            height 100%
            display flex
            align-items center
            justify-content center
            flex-shrink 0

            img
              height 62%
              width auto
              -webkit-scroll-snap-coordinate 50% 50%
              scroll-snap-coordinate 50% 50%
              scroll-snap-align center

          .second
            left -50vw
          .third
            left -100vw

        svg
          position sticky
          top 0

      .case-studies-heading
        width 100%
        font-size 6.93vw
        margin 0

      .case-studies-bg
        margin-top 0
        padding 0
        background-color #ffffff

        .case-studies-description
          margin-top 0
          .case-studies-title
            font-size 5.33vw
            margin 0
          .case-studies-subtitle
            font-size 3.73vw
          .case-studies-text, .case-studies-separator
            display none

        .animated-button-container
          margin-top 2vh

        .screens-container
          display none
