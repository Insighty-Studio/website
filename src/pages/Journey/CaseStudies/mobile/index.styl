+iphone()
  .case-studies-page
    overflow-x hidden
    overflow-y scroll
    scroll-snap-type y mandatory
    display flex
    flex-direction column
    height 100%

    .case-studies-heading
      margin-top 16vh
      width 100%
      font-size 6.93vw
      line-height 30pt
      padding 0 10% 0 10%

    .case-studies-content
      scroll-snap-align start none
      flex-shrink 0
      width 100%
      height 100%
      margin-top 5.9%
      padding 0 5% 0 10%
      overflow hidden

      .case-study
        height 75vh
        margin-bottom 10vh
        overflow-y hidden

        &:last-child
          margin-bottom 0

        .case-study-bg
          margin-top 0
          padding 0
          background-color: #ffffff;
          .case-study-description
            margin-top 50vh
            .case-study-title
              font-size 5.33vw
              margin 0
            .case-study-subtitle
              font-size 3.73vw
            .case-study-text, .case-study-separator
              display none

          .animated-button-container
            margin-top 0

            .button-hover-text
              height 65%
              border-radius 5vw
            .animated-button
              margin 0
              .button-title
                font-size 3.47vw
                letter-spacing 1.37pt
                padding 0 10px 0 20px
              &:nth-child(2)
                display none

        .screens-container
          top 0
          left 0
          right 0
          height 45vh
          width 50%
          margin 0 auto
          display flex
          flex-direction row
          justify-content space-evenly

          img.phone-image
            max-width 30.765625vw

          img
            max-width 28.40625vw
