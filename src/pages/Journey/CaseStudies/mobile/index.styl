+iphone()
  .case-studies-page
    overflow-x hidden
    overflow-y scroll
    scroll-snap-type y mandatory
    display flex
    flex-direction column
    height 100%
    padding 0

    .case-studies-heading
      margin-top 16vh
      width 100%
      font-size 6.93vw
      line-height 30pt
      padding 0 10%

    .case-studies-content
      scroll-snap-align start none
      flex-shrink 0
      width 100%
      height 100%
      margin-top 5.9%
      overflow hidden

      .case-study
        height 90vh
        overflow-y hidden

        &:last-child
          margin-bottom 0

    .footer
      margin-top 0
