+iphone()
  .intro-page
    width 100vw
    height auto
    display flex
    justify-content center
    overflow hidden !important

    .intro-main
      width 100%
      height auto
      z-index 1
      padding 0
      overflow hidden !important

      .intro-logo-container
        width 100%
        padding-top 4vh
        padding-left 10%

        .intro-logo
          width 3%
          height 5.65%

      .intro-content
        height auto
        width 100%
        margin 2vh 0 0 0
        padding 0
        display block
        overflow hidden

        .intro-bg-container
          margin-top 2vh
          flex 0 0 auto
          max-width none
          height 27vh
          z-index 1
          overflow hidden

        .intro-header
          padding-left 10%
          height auto
          padding-right 0
          display flex
          flex-direction column
          justify-content center
          overflow hidden

          .intro-principle
            display flex
            flex-direction row
            align-items center
            width 100%

            .intro-principle-line
              border 0.5px solid #FF5551
              width 3.5%
              margin-right 1%

            .intro-principle-text
              font-size 10px
              font-weight 600
              letter-spacing 3px
              line-height 3.2vw
              color #FF5551

          .intro-heading
            margin 12px 0 18px 0
            font-weight bold
            font-size 6.93vw
            line-height 10.67vw

          .intro-description
            margin 0
            font-size 4vw
            opacity 0.8
            line-height 8vw

          .button-container
            button
              margin-top 3.89vh
              padding 2.69vh 8.8vw
              font-size 4.26vw
              letter-spacing 0.426vw

              a
                color white
                text-decoration none
