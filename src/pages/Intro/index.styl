.intro-page
  width 100vw
  height 100vh
  display flex
  justify-content center

  .intro-main
    width 100%
    height 100%
    z-index 1
    padding-left 10%
    padding-right 24px
    overflow hidden

    .intro-logo-container
      width 100%
      padding-top 4vh

      .intro-logo
        width 3%
        height 5.65%

    .intro-content
      height 104%
      width 100%
      display flex
      flex-direction row
      justify-content space-between
      margin-top -14vh
      flex-wrap wrap

      .intro-bg-container
        flex 1 1 360px
        max-width 960px
        height 100%
        z-index 1

      .intro-header
        height 100%
        padding-right 5%
        display flex
        flex-direction column
        justify-content center

        .intro-principle
          display flex
          flex-direction row
          align-items center
          width 100%

          .intro-principle-line
            border 0.5px solid #FF5551
            width 3.5%
            margin-right 1%

          .intro-principle-text
            font-size 10px
            font-weight 600
            letter-spacing 3px
            line-height 12px
            color #FF5551

        .intro-heading
          margin 20px 0 15px 0
          font-weight bold
          font-size 44px
          line-height 53px

        .intro-description
          font-size 20px
          opacity 0.8
          line-height 32px

        .button-container
          button
            margin-top 50px
            padding 22px 32px
            font-size 18px
            letter-spacing 1.8px

            a
              color white
              text-decoration none
