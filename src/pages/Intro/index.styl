.intro-page
  width 100vw
  height 100vh
  display flex
  justify-content center

  .intro-bg-container
    position absolute
    width 100vw
    height 100vh
    z-index 1

    .intro-bg
      margin-left 47.27%
      margin-top 15%

  .intro-main
    width 100%
    height 100%
    z-index 1
    padding-left 7%

    .intro-logo-container
      width 100%
      margin-top 5%

      .intro-logo
        width 3%
        height 5.65%

    .intro-header
      margin-top 10%
      height 14.45%

      .intro-principle
        display flex
        flex-direction row
        align-items center
        width 100%

        .intro-principle-line
          border 0.5px solid #FF5551
          width 3.5%
          margin-right 1%

        .intro-principle-text
          font-size 0.78vw
          font-weight 600
          letter-spacing 3pt
          color #FF5551

      .intro-heading
        font-weight bold
        line-height 53pt
        font-size 3.44vw
        margin-top 1%

      .intro-description
        margin-top -2.5%
        font-size 1.56vw
        opacity 0.8
        line-height 32pt

    .button-container
      margin-top 11%

      button
        padding 1.5% 3%
        letter-spacing 1.6pt
