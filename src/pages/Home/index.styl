.design
  width 100%
  position absolute
  top 0
  z-index -1
  opacity 0.5

.home-page
  overflow visible
  width 100vw
  display flex
  flex-direction column
  align-items center

  .vr-girl-container
    height 100vh
    width 100vw
    position absolute
    overflow hidden

    .vr-girl
      margin-left 62.34%
      margin-top 24%

  .home-content
    margin-top 10%
    width 80%

    .home-heading-main
      margin 0
      font-weight bold
      line-height 53pt
      font-size 3.44vw

    .home-description
      margin-top 4%
      opacity 0.8

      .home-description-text
        font-size 1.5vw
        line-height 32pt

      .description-more
        cursor pointer
        color #5C64AA

  .home-help-section
    margin-top 6%
    min-height 40vh
    display flex
    flex-direction column
    align-items center

    .home-help-heading
      font-size 3vw
      width 80vw

    .fintech-logos-container
      margin-top 1.4%
      width 100vw
      display flex
      align-items center

      .logo
        height 23.5vh
        display flex
        align-items center
        background-color #F7F9FC
        padding-right 3.8vw
        padding-left 3.1vw
        transition all .3s ease-in-out

        &:hover
          background-color white
          transform scale(1.05)

  .home-case-studies
    display flex
    flex-direction column
    margin-top 6.8%
    width 80vw

    .case-studies-heading
      font-size 3vw




